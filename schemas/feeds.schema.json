{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/tjhorner/transit-tracker-api/refs/heads/main/schemas/feeds.schema.json",
  "type": "object",
  "title": "Transit Tracker API Feed Configuration",
  "properties": {
    "feeds": {
      "type": "object",
      "description": "Feeds available to source data from.",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "description": "The key of this object is used to identify the feed in the API. It should be short and unique.",
          "examples": [
            "st",
            "nctd"
          ],
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the feed. This will be shown to end users.",
              "examples": [
                "Puget Sound Region",
                "North County Transit District"
              ]
            },
            "description": {
              "type": "string",
              "description": "A description of the feed. This will be shown to end users.",
              "examples": [
                "All transit agencies in the Puget Sound region",
                "San Diego, California, USA"
              ]
            },
            "serviceArea": {
              "type": "array",
              "description": "An optional override to the feed's service area polygon. If not provided, the service area will be derived from the locations of stops provided by the feed.\n\nThis should be in the same format as the \"coordinates\" property of a GeoJSON Polygon.",
              "items": {
                "type": "array",
                "minItems": 4,
                "items": {
                  "type": "array",
                  "items": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "number"
                    }
                  ],
                  "minItems": 2,
                  "maxItems": 2,
                  "additionalItems": false
                }
              }
            },
            "gtfs": {
              "type": "object",
              "description": "Configuration parameters for a GTFS feed.",
              "properties": {
                "quirks": {
                  "type": "object",
                  "description": "Optional list of GTFS quirks to apply when processing this feed. Quirks are workarounds for ad-hoc issues found in GTFS feeds.",
                  "properties": {
                    "fuzzyMatchTripUpdates": {
                      "type": "boolean",
                      "description": "If enabled, GTFS-RT trip updates will be matched using a substring of `trip_id` rather than an exact match.",
                      "default": false
                    }
                  }
                },
                "static": {
                  "$ref": "#/$defs/HttpRequestOptionsOrUrl",
                  "description": "Where to fetch the static GTFS zip file from."
                },
                "rtTripUpdates": {
                  "description": "Optional reference to a GTFS-RT Trip Updates feed. Will supply real-time data if available.\n\nMultiple may be specified, in which case their results will be merged.",
                  "anyOf": [
                    {
                      "$ref": "#/$defs/HttpRequestOptionsOrUrl"
                    },
                    {
                      "type": "array",
                      "items": {
                        "allOf": [
                          {
                            "$ref": "#/$defs/HttpRequestOptions",
                            "additionalProperties": true
                          },
                          {
                            "type": "object",
                            "properties": {
                              "routeIds": {
                                "type": "array",
                                "description": "If specified, this GTFS-RT feed will only be requested for these route IDs. This is useful if multiple GTFS-RT feeds are specified and each only covers a subset of routes.",
                                "items": {
                                  "type": "string"
                                }
                              }
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              },
              "required": [
                "static"
              ],
              "additionalProperties": false
            },
            "onebusaway": {
              "type": "object",
              "description": "Configuration parameters for a OneBusAway feed.",
              "properties": {
                "baseUrl": {
                  "type": "string",
                  "examples": [
                    "https://api.pugetsound.onebusaway.org"
                  ],
                  "description": "Base URL to the OneBusAway instance to use.",
                  "format": "uri"
                },
                "apiKey": {
                  "type": "string",
                  "description": "Your OneBusAway API key."
                }
              },
              "required": [
                "baseUrl",
                "apiKey"
              ],
              "additionalProperties": false
            },
            "hafas": {
              "type": "object",
              "description": "Configuration parameters for a HAFAS feed.",
              "properties": {
                "profile": {
                  "type": "string",
                  "examples": [ "vbb", "db" ],
                  "description": "A preset HAFAS profile to use for `hafas-client`. See: https://github.com/public-transport/hafas-client/blob/main/p/readme.md#built-in-profiles"
                },
                "userAgent": {
                  "type": "string",
                  "description": "A string containing your project name and contact information."
                }
              },
              "required": [
                "profile",
                "userAgent"
              ],
              "additionalProperties": false
            },
            "mvg": {
              "type": "object",
              "description": "Configuration parameters for an MVG (Munich Public Transit) feed.",
              "properties": {
                "baseUrl": {
                  "type": "string",
                  "examples": [
                    "https://www.mvg.de/api/bgw-pt/v3"
                  ],
                  "description": "Base URL to the MVG API. Defaults to https://www.mvg.de/api/bgw-pt/v3",
                  "format": "uri",
                  "default": "https://www.mvg.de/api/bgw-pt/v3"
                }
              },
              "additionalProperties": false
            }
          },
          "required": [
            "name",
            "description"
          ],
          "oneOf": [
            {
              "required": [
                "gtfs"
              ],
              "not": {
                "required": [
                  "onebusaway",
                  "hafas",
                  "mvg"
                ]
              }
            },
            {
              "required": [
                "onebusaway"
              ],
              "not": {
                "required": [
                  "gtfs",
                  "hafas",
                  "mvg"
                ]
              }
            },
            {
              "required": [
                "hafas"
              ],
              "not": {
                "required": [
                  "gtfs",
                  "onebusaway",
                  "mvg"
                ]
              }
            },
            {
              "required": [
                "mvg"
              ],
              "not": {
                "required": [
                  "gtfs",
                  "onebusaway",
                  "hafas"
                ]
              }
            }
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "feeds"
  ],
  "additionalProperties": false,
  "$defs": {
    "HttpRequestOptions": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "Full URL to the resource.",
          "format": "uri"
        },
        "headers": {
          "type": "object",
          "description": "Optional headers to send with the request. Useful if authorization is required.",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "url"
      ],
      "additionalProperties": false
    },
    "HttpRequestOptionsOrUrl": {
      "oneOf": [
        {
          "$ref": "#/$defs/HttpRequestOptions"
        },
        {
          "type": "string",
          "description": "Shorthand for specifying a URL. If a string is provided where an HttpRequestOptions object is expected, it will be interpreted as the URL with no additional headers."
        }
      ]
    }
  }
}